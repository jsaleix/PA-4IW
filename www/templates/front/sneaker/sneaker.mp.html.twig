        <div>
          <h3 class="sr-only">Description</h3>

          <div class="space-y-6">
            <p class="text-base text-gray-900">{{ sneaker.description }}</p>
          </div>

            <div class="grid grid-cols-4 gap-4 sm:grid-cols-8 lg:grid-cols-4">
            {% if(not sneaker.sold ) %}
                    <a href="{{ path('marketplace_product_checkout', {'id': sneaker.id }) }}" class="m-6">
                        <button class="mt-10 w-full bg-indigo-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">BUY NOW</button>
                    </a>
                {% else %}
                    <h4>Sold</h4>
                {%  endif %}

                <a href="{{ path('report-sneaker', { 'id': sneaker.id }) }}" class="m-6">
                    <button class="mt-10 w-full bg-red-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">Report this post</button>
