        <form class="mt-10">
          {% if sneaker.sneakerModel is not null %}
                <h3 class="text-sm text-gray-900 font-medium"><a href="{{ path('front_sneaker_model_show', {'id': sneaker.sneakerModel.id }) }}">{{ sneaker.sneakerModel.name }}</a></h3>
            {% endif %}
          <!-- Sizes -->
          <div class="mt-10">
            <div class="flex items-center justify-between">
              <h3 class="text-sm text-gray-900 font-medium">Size</h3>
              
            </div>

            <fieldset class="mt-4">
              <legend class="sr-only">Choose a size</legend>
              <div class="grid grid-cols-4 gap-4 sm:grid-cols-8 lg:grid-cols-4">
                <!-- Active: "ring-2 ring-indigo-500" -->
                <label class="group relative border rounded-md py-3 px-4 m-8 flex items-center justify-center text-sm font-medium uppercase hover:bg-gray-50 focus:outline-none sm:flex-1 sm:py-6 bg-white shadow-sm text-gray-900 cursor-pointer">
                  <input type="radio" name="size-choice" value="XS" class="sr-only" aria-labelledby="size-choice-1-label">
                  <span id="size-choice-1-label"> {{sneaker.size}} </span>

                  <!--
                    Active: "border", Not Active: "border-2"
                    Checked: "border-indigo-500", Not Checked: "border-transparent"
                  -->
                  <span class="absolute -inset-px rounded-md pointer-events-none" aria-hidden="true"></span>
