{% extends 'base_front.html.twig' %}

{% block title %}SNKER - order {{ invoice.id}} {% endblock %}

{% block body %}

    <div class="account container">
        <div class="orders-header">
            <h1>Order no.{{ invoice.id }}</h1>
            <span><p>You don't know what to do?</p><b>Go to Help</b></span>
            <p><i>Bought on {{ invoice.date|date('d/m/Y') }}</i></p>
            <hr/>
            <p>Status: {{ invoice.paymentStatus }}</p>
            <div>
                <p>Delivery details</p>
                <p>Reception address: <b>{{ invoice.receptionAddress }}</b></p>
                <p>Name {{ invoice.buyer.name}} {{ invoice.buyer.surname }}</p>
            </div>
            <hr/>
            {% if form is not null %}
                {{ form_start(form) }}
                    <p>You have to provide the UPS parcel tracking number corresponding to the one you got when you posted the order here</p>
                    {{ form_rest(form) }}
                {{ form_end(form) }}
            {% endif %}
        </div>

    </div>

    <style>

    </style>

{% endblock %}