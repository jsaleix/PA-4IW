{% extends 'base_front.html.twig' %}

{% block title %}SNKER - Your profile {% endblock %}

{% block body %}


<div class="flex flex-row flex-wrap justify-content-start">    
    <div class="flex flex-column" style="
        width: 30%;
    ">
    {{ include('@front/account/menu/menu.html.twig') }}
    </div>

    <div class="account container m-8" style="
        width: 60%;
    ">
        <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
            Your sneakers
        </h4>

        <div class="account_profile">
            <div class="sneakers_items">    

            <div class="w-full mb-8 overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
            <table class="w-full whitespace-no-wrap">
                <thead>
                <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                    <th class="px-4 py-3">Name</th>
                    <th class="px-4 py-3">Brand</th>
                    <th class="px-4 py-3">Price</th>
                    <th class="px-4 py-3">Marketplace</th>
                    <th class="px-4 py-3">edit</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                {% for sneaker in sneakers %}


                <tr class="text-gray-700 dark:text-gray-400">
                    <td class="px-4 py-3">
                    <div class="flex items-center text-sm">
                        <!-- Avatar with inset shadow -->
                        <div class="relative hidden w-8 h-8 mr-3 rounded-full md:block">
                        {% if( sneaker.getImages() is not empty) %}
                            <img class="object-cover w-full h-full rounded-full" src="{{ vich_uploader_asset(sneaker.getImages()[0]) }}" alt="" loading="lazy">
                        {% endif %}
                        
                        <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
                        </div>
                        <div>
                        <p class="font-semibold">
                            {{sneaker.name}}
                        </p>
                        <p class="text-xs text-gray-600 dark:text-gray-400">
                            {{ sneaker.brand.name}}
                        </p>
                        </div>
                    </div>
                    </td>
                    <td class="px-4 py-3 text-sm">
                        {{ sneaker.brand.name}}
                    </td>
                    <td class="px-4 py-3 text-xs">
                    <span class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full dark:bg-green-700 dark:text-green-100">
                        $ {{ sneaker.price}}
                    </span>
                    </td>
                    <td class="px-4 py-3 text-sm">
                        {{sneaker.fromShop ? 'From Shop' : 'From Marketplace'}}
                    </td>

                    <td class="px-4 py-3">
                            <div class="flex items-center space-x-4 text-sm">
                            <button class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Edit">
                                <a href="{{ path('front_account_sneaker_edit', { 'id': sneaker.id }) }}" class="sneaker_item">
                                
                                <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                </svg>
                                </a>
                            </button>
                            <button class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Delete">
                                <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                            </button>
                            </div>
                        </td>
                </tr>
                {% else %}
                    <tr colspan="5">No sneakers found </tr>
                {% endfor %}
            </tbody>
            </table>
            </div>
        </div>      

        <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
            Your sneakers sold
        </h4>
            <div class="sneakers_items">
                <div class="w-full mb-8 overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
            <table class="w-full whitespace-no-wrap">
                <thead>
                <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                    <th class="px-4 py-3">Name</th>
                    <th class="px-4 py-3">Brand</th>
                    <th class="px-4 py-3">Price</th>
                    <th class="px-4 py-3">Marketplace</th>
                    <th class="px-4 py-3">edit</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                {% for sneaker in sales %}


                <tr class="text-gray-700 dark:text-gray-400">
                    <td class="px-4 py-3">
                    <div class="flex items-center text-sm">
                        <!-- Avatar with inset shadow -->
                        <div class="relative hidden w-8 h-8 mr-3 rounded-full md:block">
                        {% if( sneaker.getImages() is not empty) %}
                            <img class="object-cover w-full h-full rounded-full" src="{{ vich_uploader_asset(sneaker.getImages()[0]) }}" alt="" loading="lazy">
                        {% endif %}
                        
                        <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
                        </div>
                        <div>
                        <p class="font-semibold">
                            {{sneaker.name}}
                        </p>
                        <p class="text-xs text-gray-600 dark:text-gray-400">
                            {{ sneaker.brand.name}}
                        </p>
                        </div>
                    </div>
                    </td>
                    <td class="px-4 py-3 text-sm">
                        {{ sneaker.brand.name}}
                    </td>
                    <td class="px-4 py-3 text-xs">
                    <span class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full dark:bg-green-700 dark:text-green-100">
                        $ {{ sneaker.price}}    
                    </span>
                    </td>
                    <td class="px-4 py-3 text-sm">
                        {{sneaker.fromShop ? 'From Shop' : 'From Marketplace'}}
                    </td>
                    <td class="px-4 py-3 text-sm">
                        <a href="{{ path('front_account_sneaker_edit', { 'id': sneaker.id }) }}" class="sneaker_item">
                            Modifier
                        </a>
                    </td>
                </tr>
                {% else %}
                    <tr colspan="5">No sneakers found </tr>
                {% endfor %}
            </tbody>
            </table>
            </div>
        </div>
            </div>
        </div>
        
    </div>
</div>

<style>

    .account{
    }

    .account > h1{
        margin-bottom: 20px;
    }

    .account a{
        text-decoration: none;
        color: black;
    }

    .account_profile{
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .left{
        width: 70%;
    }

    .right{
        width: 30%;
        background-color: red;
        height: 100vh;
    }
</style>

{% endblock %}