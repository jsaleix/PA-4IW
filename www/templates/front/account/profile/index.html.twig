{% extends 'base_front.html.twig' %}

{% block title %}SNKER - Your profile {% endblock %}

{% block body %}

<div class="account container">
    <div class="account_profile">
        <h1>Edit your profile</h1>
        {{ form_start(form) }}
            {{ form_rest(form) }}
            <button type="submit" class="btn btn-primary">SAVE</button>
        {{ form_end(form) }}
        <div class="buttons-row">
            <a href="{{ path('account_profile_password') }}">
                <button class="btn btn-primary">Change password</button>
            </a>
            <a href="{{ path('account_profile_mail') }}">
                <button class="btn btn-primary">Change mail</button>
            </a>
        </div>
    </div>

    <div class="right"></div>
</div>

<style>

    .buttons-row{
        margin-top: 10px;
    }

    .buttons-row a {
        margin-bottom: 10px;
    }

    .account{
        display: flex;
    }

    .account a{
        text-decoration: none;
        color: black;
    }

    .account_profile{
        display: flex;
        flex-direction: column;
        width: 100%;
        padding: 10px;
    }

    .left{
        width: 70%;
    }

    .right{
        width: 30%;
        height: 100vh;
        background-image: url('{{ asset('images/assets/visuals/ryan-plomp-76w_eDO1u1E-unsplash.jpg') }}');
        background-repeat: no-repeat;
        background-size: cover;
        background-position-x: center;
    }
</style>

{% endblock %}