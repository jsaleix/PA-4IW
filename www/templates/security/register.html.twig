{% extends 'base_front.html.twig' %}

{% block title %}
	Join Us !
{% endblock %}

{% block body %}
	<form method="post">

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		{# {{form_start(formRegister)}}
				<div class="form-control">
					<label for="email">Email :</label>
					<div class="col">
						{{ formRegister.email }}
					</div>
		
		
					<div class="col">
						{{ formRegister.avatar }}
					</div>
		
					<div class="col">
						{{ formRegister.city }}
					</div>
		
					<div class="col">
						{{ formRegister.address }}
					</div>
		
					<div class="col">
						{{ formRegister.phone }}
					</div>
		
					<div class="col">
						{{ formRegister.name }}
					</div>
		
					<div class="col">
						{{ formRegister.surname }}
					</div>
				</div>
				{{ form_end(formRegister) }} #}
		{{form(formRegister)}}

		</form>
	{% endblock %}
