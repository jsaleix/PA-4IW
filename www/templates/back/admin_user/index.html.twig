{% extends 'base_back.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container">

    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Email</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Roles</th>
                <th>City</th>
                <th>Address</th>
                <th>Phone</th>
                <th>StripeConnectId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td class="preview_container"><img src="{{ vich_uploader_asset(user.profileImage) }}" alt="user picture"/></td>
                <td>{{ user.email }}</td>
                <td>{{ user.name??"Unset" }}</td>
                <td>{{ user.surname??"Unset" }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.city??"unset" }}</td>
                <td>{{ user.address??"unset" }}</td>
                <td>{{ user.phone??"unset" }}</td>
                <td>{{ user.stripeConnectId??"None" }}</td>
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
