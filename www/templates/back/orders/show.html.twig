{% extends 'base_back.html.twig' %}

{% block title %}SNKER - order {{ invoice.id}} {% endblock %}

{% block body %}

    <div class="account container">
        <div class="orders-header">
            <h1>Order no.{{ invoice.id }}</h1>
            <p><i>Bought on {{ invoice.date|date('d/m/Y') }}</i></p>
            <hr/>
            <p>Status: {{ invoice.paymentStatus }}</p>
            <p>Delivery details</p>
            <p>Reception address: <b>{{ invoice.receptionAddress }}</b></p>
            <hr/>
            {% if invoice.sneaker.fromShop %}
                {% if form is not null %}
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                {% endif %}
            {% endif %}
        </div>

    </div>

    <style>

    </style>

{% endblock %}