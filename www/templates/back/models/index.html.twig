{% extends 'base_back.html.twig' %}
{% block title %}SNKER - Models {% endblock %}

{% block body %}
    <div class="container">
        <h1>SneakerModel index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for sneaker_model in sneaker_models %}
                <tr>
                    <td>{{ sneaker_model.id }}</td>
                    <td>{{ sneaker_model.name }}</td>
                    <td>{{ sneaker_model.description }}</td>
                    <td>
                        <a href="{{ path('back_sneaker_model_show', {'id': sneaker_model.id}) }}">show</a>
                        <a href="{{ path('back_sneaker_model_edit', {'id': sneaker_model.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('back_sneaker_model_new') }}">Create new</a>
    </div>
{% endblock %}
