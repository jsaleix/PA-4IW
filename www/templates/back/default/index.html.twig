    <style>

        .account{
        }

        .account > h1{
            margin-bottom: 20px;
        }

        .account a{
            text-decoration: none;
            color: black;
        }

        .account_items{
            display: flex;
            flex-direction: row;
            /*justify-content: space-between;*/
            flex-wrap: wrap;
            width: 100%;
        }

        .account_item{
            width: calc(100%/3.1);
            margin-bottom: 15px;
            border: 1px solid gray;
            padding: 30px;
            border-radius: 10px;
            margin-right: 5px;
            cursor: pointer;
            transition: 0.5s;
        }

        .account_item:hover{
            background-color: #f0f0f0;
        }
    </style>

{% endblock %}